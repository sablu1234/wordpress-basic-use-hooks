// ata index.php file a paste korle jodi post thake tobe show korbe

<?php if ( have_posts() ) : while ( have_posts() ) : the_post(); ?>
    <h2><?php the_title() ;?></h2>
    <?php the_post_thumbnail(); ?>
    <?php the_excerpt(); ?>
<?php endwhile; else : ?>
    <p><?php _e( 'No Posts To Display.' ); ?></p>
<?php endif; ?> 
